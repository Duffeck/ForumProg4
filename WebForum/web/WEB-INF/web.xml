<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Topico</servlet-name>
        <servlet-class>br.pucpr.prog4.forum.models.Topico</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaAssuntosServlet</servlet-name>
        <servlet-class>br.pucpr.prog4.forum.controller.ListaAssuntosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaTopicosServlet</servlet-name>
        <servlet-class>br.pucpr.prog4.forum.controller.ListaTopicosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Topico</servlet-name>
        <url-pattern>/Topico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaAssuntosServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaTopicosServlet</servlet-name>
        <url-pattern>/ListaTopicosServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
